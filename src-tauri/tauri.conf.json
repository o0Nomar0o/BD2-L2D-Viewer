{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "BD2-L2D-Viewer",
  "version": "0.1.0",
  "identifier": "com.tauri.dev",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm build"
  },
  "app": {
    "windows": [
      {
        "title": "B2D-L2D-Viewer",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay"
      }
    ],
    "security": {
      "capabilities": [
        {
          "identifier": "draggable-window",
          "windows": [
            "*"
          ],
          "permissions": [
            "core:window:allow-start-dragging"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon_32x32.png",
      "icons/icon_128x128.png",
      "icons/icon_128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
